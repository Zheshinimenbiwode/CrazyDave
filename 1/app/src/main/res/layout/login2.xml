<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login"
    >


    <EditText
        android:id="@+id/editTextAccount"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:padding="16dp"
        android:hint="请输入账号"
        android:textSize="16dp"
        android:background="@drawable/edit_text_box"
        android:layout_centerInParent="true"
        android:layout_above="@id/Phone"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/Phone"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:padding="16dp"
        android:hint="请填写手机号"
        android:textSize="16dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/checkBoxLayout"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_box"
        android:inputType="textEmailAddress"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/checkBoxLayout"
        android:layout_marginTop="16dp"
        android:layout_above="@id/login_button"
        android:gravity="center"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="我已同意《用户协议》和《隐私政策》"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="370dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="登录"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_above="@id/register_button"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_login_button"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="370dp"
        android:layout_height="59dp"
        android:layout_centerInParent="true"
        android:text="注册"
        android:textSize="19dp"
        android:textStyle="bold"
        android:textColor="#73C5AA"
        android:background="@drawable/bg_register_button"
        android:layout_above="@id/text_bottom"
        android:layout_marginTop="20dp"
        android:elevation="0dp"/>

    <TextView
        android:id="@+id/text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:text="其他方式登录" />

</RelativeLayout>