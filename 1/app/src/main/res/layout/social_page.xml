<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/social_page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_plant_resourse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgnomal"
        android:paddingVertical="40dp"
        android:paddingHorizontal="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <!-- 页面标题 -->
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:background="#00FF0000"
                app:srcCompat="@drawable/chevron" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:text="社区"
                android:textColor="#50B490"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 植物列表 -->
        <GridLayout
            android:id="@+id/gl_plants"
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="2">

            <!-- 植物项（示例） -->
            <LinearLayout
                android:id="@+id/ll_plant12"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant12"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/foriest" />

                <TextView
                    android:id="@+id/tv_plant12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="飞的植物岛"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/user_info_social1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_info_icon1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/usericon" />
                    <LinearLayout
                        android:id="@+id/user_info_info1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_rowWeight="1"

                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_info_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="Catlyzer"
                            android:textColor="#AF275B36"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/user_info_date1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="10-13 装饰"
                            android:textColor="#7B3F7A65"

                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_plant13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant13"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/snow2" />

                <TextView
                    android:id="@+id/tv_plant13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="飞的植物岛"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/user_info_social3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_info_icon3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/usericon" />
                    <LinearLayout
                        android:id="@+id/user_info_info3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_rowWeight="1"

                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_info_name3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="Catlyzer"
                            android:textColor="#AF275B36"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/user_info_date3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="10-13 装饰"
                            android:textColor="#7B3F7A65"

                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_plant14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant14"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/snow" />

                <TextView
                    android:id="@+id/tv_plant14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="飞的植物岛"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/user_info_social4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_info_icon4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/usericon" />
                    <LinearLayout
                        android:id="@+id/user_info_info4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_rowWeight="1"

                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_info_name4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="Catlyzer"
                            android:textColor="#AF275B36"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/user_info_date4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="10-13 装饰"
                            android:textColor="#7B3F7A65"

                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_plant1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant1"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/foriest" />

                <TextView
                    android:id="@+id/tv_plant1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="飞的植物岛"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/user_info_social"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/user_info_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/usericon" />
                    <LinearLayout
                        android:id="@+id/user_info_info"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_rowWeight="1"

                        android:layout_columnWeight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_info_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="Catlyzer"
                            android:textColor="#AF275B36"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/user_info_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:text="10-13 装饰"
                            android:textColor="#7B3F7A65"

                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </GridLayout>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>