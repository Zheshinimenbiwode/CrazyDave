<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/social_page1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_plant_resourse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:paddingVertical="60dp"
        android:paddingHorizontal="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <!-- 页面标题 -->
            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="33dp"
                android:layout_height="match_parent"
                android:background="#00FF0000"
                app:srcCompat="@drawable/chevron" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="00center"

                android:text="我的植物库"
                android:textColor="#50B490"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- 植物列表 -->
        <GridLayout
            android:id="@+id/gl_plants"
            android:layout_width="match_parent"
            android:layout_height="701dp"
            android:layout_weight="1"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="4">

            <!-- 植物项（示例） -->
            <LinearLayout
                android:id="@+id/ll_plant1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pugongying" />

                <TextView
                    android:id="@+id/tv_plant1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="蒲公英"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- 植物项（示例） -->
            <LinearLayout
                android:id="@+id/ll_plant2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/yezi" />

                <TextView
                    android:id="@+id/tv_plant2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="椰子树"
                    android:textSize="16sp" />

            </LinearLayout>
            <!-- 植物项（示例） -->
            <LinearLayout
                android:id="@+id/ll_plant3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/diyi" />

                <TextView
                    android:id="@+id/tv_plant3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="地衣"
                    android:textSize="16sp" />


            </LinearLayout>
            <!-- 植物项（示例） -->
            <LinearLayout
                android:id="@+id/ll_plant4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_plant4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/rongshu" />

                <TextView
                    android:id="@+id/tv_plant4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="榕树"
                    android:textSize="16sp" />

            </LinearLayout>

        </GridLayout>

        <!-- 跳转花园按钮 -->
        <Button
            android:id="@+id/btn_add_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:text="添加新植物"

            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>