<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_plant_resourse">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bgnomal"
        tools:context="home">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            tools:context="home">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="657dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="376dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#00FF0000"
                    android:src="@drawable/bar">

                </ImageView>


                <ImageButton
                    android:id="@+id/dropButton"
                    android:layout_width="376dp"
                    android:layout_height="18dp"
                    android:background="#00FF0000"
                    android:scaleType="fitXY"
                    android:paddingHorizontal="0dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/dropbar" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="425dp"
                    android:background="#00FF0000"
                    android:src="@drawable/home">

                </ImageView>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                tools:context="home">

                <ImageButton
                    android:id="@+id/home_button1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:background="#00FF0000"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/home_image2" />

                <ImageButton
                    android:id="@+id/home_button2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="40dp"
                    android:background="#00FF0000"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/home_image3" />

                <ImageButton
                    android:id="@+id/home_button3"
                    android:layout_width="42dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="40dp"
                    android:background="#00FF0000"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="0dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/home_image4" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/gl_plants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4"
        android:paddingTop="40dp"
        tools:ignore="MissingConstraints">

        <!-- 植物项（示例） -->
        <LinearLayout
            android:id="@+id/ll_plant1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_plant1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/pugongying" />

            <TextView
                android:id="@+id/tv_plant1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="蒲公英"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- 植物项（示例） -->
        <LinearLayout
            android:id="@+id/ll_plant2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_plant2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/yezi" />

            <TextView
                android:id="@+id/tv_plant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="椰子树"
                android:textSize="16sp" />

        </LinearLayout>
        <!-- 植物项（示例） -->
        <LinearLayout
            android:id="@+id/ll_plant3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_plant3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/diyi" />

            <TextView
                android:id="@+id/tv_plant3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="地衣"
                android:textSize="16sp" />


        </LinearLayout>
        <!-- 植物项（示例） -->
        <LinearLayout
            android:id="@+id/ll_plant4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_plant4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rongshu" />

            <TextView
                android:id="@+id/tv_plant4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="榕树"
                android:textSize="16sp" />

        </LinearLayout>

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>